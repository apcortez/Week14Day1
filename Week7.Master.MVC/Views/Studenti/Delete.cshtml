@model StudenteViewModel
<form method="post">
    <p>Sei sicuro di voler eliminare questo docente: @Model.ID - @Model.Nome @Model.Cognome ?</p>

    <div class="form-group">
        <label asp-for="ID"></label>
        <input asp-for="ID" class="form-control" readonly />
        <span asp-validation-for="ID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" readonly />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cognome"></label>
        <input asp-for="Cognome" class="form-control" readonly />
        <span asp-validation-for="Cognome" class="text-danger"></span>
    </div>

    <input type="submit" value="Conferma" class="tbn btn-danger" />
    <a class="btn btn-primary" asp-controller="Corsi" asp-action="Index" role="button">Annulla</a>
</form>