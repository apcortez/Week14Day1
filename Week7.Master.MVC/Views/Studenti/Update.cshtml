@model StudenteViewModel
<h1>Modifica studente: </h1>

<form method="post">
    <div class="form-group">
        <input type="hidden" asp-for="ID" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cognome"></label>
        <input asp-for="Cognome" class="form-control" />
        <span asp-validation-for="Cognome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataNascita"></label>
        <input asp-for="DataNascita" class="form-control" />
        <span asp-validation-for="DataNascita" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TitoloStudio"></label>
        <input asp-for="TitoloStudio" class="form-control" />
        <span asp-validation-for="TitoloStudio" class="text-danger"></span>
    </div>
    <input type="submit" value="Conferma" class="btn btn-secondary" />
    <a class="btn btn-secondary" asp-controller="Docenti" asp-action="Index" role="button">Indietro</a>
</form>
