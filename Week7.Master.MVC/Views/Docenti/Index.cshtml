@model List<DocenteViewModel>


<a asp-controller="Docenti" asp-action="Create" class="btn btn-primary">Aggiungi Docente</a>
<table class="table table-hover table-bordered table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Email</th>
            <th>Telefono</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Nome</td>
                <td>@item.Cognome</td>
                <td>@item.Email</td>
                <td>@item.Telefono</td>
                <td>
                    <a asp-controller="Docenti" asp-action="Update" asp-route-id="@item.ID" class="btn btn-primary">Modifica</a>
                    <a asp-controller="Docenti" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Totale</th>
            <th>@Model.Count</th>
            <th></th>
        </tr>
    </tfoot>

</table>